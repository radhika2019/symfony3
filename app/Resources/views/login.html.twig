{% extends 'base.html.twig' %}

{% block body %}
	{{ parent() }}
	<h1 align="center">Login Form</h1>
	<div class="col-md-4 col-md-offset-4">
	{% form_theme loginform 'bootstrap_3_layout.html.twig' %}
		{{ form_start(loginform,{'attr' : {'class': 'form-style','novalidate': 'novalidate'}}) }}
			{{ form_row(loginform.email) }}
			{{ form_row(loginform.password) }}
			<button type="submit" class="btn btn-primary" formnovalidate>Login</button>
		{{ form_end(loginform, {'render_rest': false}) }}
	</div>
{% endblock %}
