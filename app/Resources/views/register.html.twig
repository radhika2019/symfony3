{% extends 'base.html.twig' %}
{% block body %}
	{{ parent() }}
	<h1 align="center">Registration Form</h1>
	<div class="col-md-4 col-md-offset-4">
	{% form_theme registerform 'bootstrap_3_layout.html.twig' %}
		{{ form_start(registerform,{'attr' : {'class': 'form-style','novalidate': 'novalidate'}}) }}
			{{ form_row(registerform.username) }}
			{{ form_row(registerform.email) }}
			{{ form_row(registerform.password.first) }}
			{{ form_row(registerform.password.second) }}
			{{ form_widget(registerform) }}
			<button type="submit" class="btn btn-primary" formnovalidate>Sign 
		 	Up</button>
		{{ form_end(registerform) }}
	</div>
{% endblock %}